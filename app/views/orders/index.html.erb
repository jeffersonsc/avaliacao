<h1>Lançamentos</h1>
<p>Lançamentos importados</p>

<table>
	<thead>
		<tr>
			<th>Cliente</th>
			<th>Descrição</th>
			<th>Preço unitário</th>
			<th>Quantidade</th>
			<th>Endereço</th>
			<th>Fonecedor</th>
			<th>Data de criação</th>
			<th>Total</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
			<tr>
				<td> <%= order.customer.name %> </td>
				<td> <%= order.product.name %> </td>
				<td> R$ <%= currency(order.product.price) %> </td>
				<td> <%= order.amount %> </td>
				<td> <%= order.address.street %> </td>
				<td> <%= order.provider.name %> </td>
				<td> <%= date_time(order.created_at) %></td>
				<td> R$ <% @total += total(order.amount, order.unit_price) %> <%= currency(total(order.amount, order.unit_price)) %></td>
			</tr>
		<% end %>
	</tbody>
	<tfoot>
		<tr>
			<td colspan="7">Total</td>
			<td>R$ <%= @total %></td>
		</tr>
	</tfoot>
</table>

