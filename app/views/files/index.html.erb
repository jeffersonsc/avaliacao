<h3>Arquivos já importados</h3>
<div class="row">
	<div class="col-sm-12 col-md-9">
		<div class="col-sm-12 sidebox">
			<table class="table table-hover table-nowrap">
				<thead>
					<tr>
						<th>Nome</th>
						<th>Data de importação</th>
						<th>Ação</th>
					</tr>
				</thead>
				<tbody>
					<% @files.each do |file| %>
						<tr>
							<td><%= file.original_filename %></td>
							<td><%= date_time(file.created_at) %></td>
							<td><%= processed?(file.processed) %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
	<div class="col-sm-12 col-md-3">
		<div class="col-sm-12 sidebox sidebox-button">
			<div class="sidebox-button text-center">
				<%= link_to "Importar um arquivo" , import_file_url , :class => "btn btn-lg btn-primary" %>
			</div>
		</div>
	</div>
</div>
